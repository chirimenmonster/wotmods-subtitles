{
    "package":  "${package}",
    "sources":  [
        {
            "method":   "apply+python",
            "root":     "res",
            "reldir":   "scripts/client/gui/mods",
            "include":  "\\.py$$",
            "dirs":     [ "src" ]
        },
        {
            "method":   "plain",
            "root":     "res",
            "reldir":   "${flash_dir}",
            "files":    [ "flash/ShowText/bin/ShowText.swf" ]
        },
        {
            "method":   "plain",
            "root":     "res",
            "reldir":   "${resource_dir}",
            "files":    [ "src/sound.json", "sound_text.xml" ]
        }
    ]
}
