{
    "package":  "${package}",
    "sources":  [
        {
            "method":   "python",
            "root":     "res",
            "reldir":   "scripts/client/gui/mods",
            "include":  "\\.py$$",
            "exclude":  "modsettings\\.py$$",
            "dirs":     [ "python" ]
        },
        {
            "method":   "apply+python",
            "root":     "res",
            "reldir":   "scripts/client/gui/mods/subtitles",
            "files":    [ "python/subtitles/modsettings.py" ]
        },
        {
            "method":   "plain",
            "root":     "res",
            "reldir":   "gui/flash",
            "files":    [ "as3/SubtitlesView/bin/SubtitlesView.swf" ]
        },
        {
            "method":   "plain",
            "root":     "res",
            "reldir":   "${resource_dir}",
            "files":    [ "sound_text.xml" ]
        }
    ]
}
